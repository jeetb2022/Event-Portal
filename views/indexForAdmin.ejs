<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Event Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/evntportl.css">
    <!-- <link rel="stylesheet" href="style1.css"> -->
</head>

<body>
    <!-- NavBar starts-->
    <nav class="navbar navbar-expand-lg fixed-top">
        <a href="" class="navbar-brand">Event Portal</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class=" nav-item"><a href="" class=" nav-link">Home</a></li>
                <li class=" nav-item"><a href="" class=" nav-link">Events</a></li>
                <!-- <div class="center"> -->
                <li class=" nav-item"><a href="#" id="show-register" class="nav-link">Add Event</a></li>
                <div class="popup">
                    <div class="close-btn">
                        &times;
                    </div>
                    <div class="form">
                        <h2>Add Events</h2>
                        <div class="form-element">

                            <form action="/addEvent" method="POST">

                                <div>
                                    <label for="eventName">Name</label>
                                    <input type="text" id="eventName" name="eventName" required / placeholder="Event Name" >
                                </div>
                                <div>
                                    <label for="eventId">Event Code</label>
                                    <input type="text" id="eventId" name="eventId" required / placeholder="Event Code" >
                                </div>
                                <div>
                                    <label for="price">Price</label>
                                    <input type="text" id="price" name="price" required / placeholder="Price per ticket" > 
                                </div>
                                <div>
                                    <label for="eventVenue">Venue</label>
                                    <input type="text" id="eventVenue" name="eventVenue" required / placeholder="Event Venue" >
                                </div>
                                <div>
                                    <label for="eventDateAndTime">Date & Time</label>
                                    <input type="text" id="eventDateAndTime" name="eventDateAndTime" required / placeholder="Date and Time" >
                                </div>
                                <div>
                                    <label for="eventPicture">URL</label>
                                    <input type="text" id="eventPicture" name="eventPicture" required / placeholder="image url" >
                                </div>
                                <button type="submit">Add event</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- <li class=" nav-item"><a href="/views/deleteEvent.ejs" id="show-delete" class="nav-link">Delete Event</a></li> -->
                <li class=" nav-item"><a class="nav-link">
                        <form action="/logout?_method=DELETE" method="POST">
                            <button type="submit" class="log-out">Sign Out</button>
                        </form>
                    </a>
            </ul>
        </div>
    </nav>

    <!-- NavrBar ends -->

    <!-- Header section starts  -->
    <div class="header">
        <div class="img-parent">
            <div class="image">
                <img src="images/event-main-image.jpg" alt="" class="bg-img">
            </div>
            <div class="img-overlay"></div>
        </div>
        <div class="img-content">
            <h2 class="heading">Welcome <%=name%> to our event portal</h2>
            <p class="p-heading">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Nobis, vitae culpa sed
                officia veniam quasi
                suscipit tenetur dolores, aperiam rem temporibus quae ipsam fugiat labore excepturi blanditiis adipisci
                cumque, amet eveniet autem consequatur? Illum.</p>
        </div>

        <!-- Header ends -->

        <!-- Events info starts  -->
        <section id="events">
            <div class="header-event">

                <h1> Upcoming Events</h1>
            </div>

            <div class="container event">
                <div class="row justify-content-center text-center">





                    <% var i=1; %>
                        <% userData.forEach((data)=>{ %>
                            <div class="col-sm-5">

                                <div class="img">

                                    <h3 style="background-color:red ; width: 5% ; position: relative; "><a
                                            href="http://localhost:3000/deleteEvent/<%=data.event_id%>">X</a>
                                    </h3>
                                    <img src=<%=data.event_picture %> class="img-fluid" alt="">
                                </div>
                                <div class="event-content">
                                    <h3>
                                        <%=data.event_name %>
                                    </h3>
                                    <span>Event Code : <%=data.event_id %> <br> Date: <%=data.date_and_time %><br>

                                                Venue: <%=data.event_venue %><br>
                                                    Price:<%=data.price %></span>

                                </div>
                            </div>
                            <br><br>
                            <% i++; }) %>
                </div>
        </section>

        <!-- testimonials -->
        <section id="testimonials" class="color-section">
            <div id="testimonials-carousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active container-fluid" data-bs-interval="4000">
                        <h2 class="testimonials-text">I recently attended stand up organised by . It was such a fabulous
                            performance by the artist. I loved the way, he cracked jokes boycott going on.</h2>
                        <img src="https://i0.wp.com/thecapitalquest.com/wp-content/uploads/2021/06/Gautam-Adani.jpg?fit=842%2C559&ssl=1" alt="dog-profile" class="testimonials-img">
                        <em>Ahmedabad, Gujarat</em>
                    </div>
                    <div class="carousel-item container-fluid" data-bs-interval="4000">
                        <h2 class="testimonials-text">My dog used to be so lonely, but with TinDog's help, they've found
                            the love of
                            their life. I think.</h2>
                        <img class="testimonials-img" src="https://www.diethelmtravel.com/wp-content/uploads/2016/04/bill-gates-wealthiest-person.jpg" alt="lady-profile">
                        <em>Pune, Maharashtra</em>
                    </div>
                </div>
                <!-- <button class="carousel-control-prev" type="button" data-bs-target="#testimonials-carousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#testimonials-carousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button> -->
            </div>
        </section>


        <!-- footer -->

        <section id="footer">
            <!-- <div class="container text-center"> -->
            <div class="row footer-row">
                <div class="col-lg-4 col-sm-12">
                    <h2 class="footer-title">
                        Event Portal</h2>
                </div>
                <div class="col-lg-4 col-sm-12">
                    <h3 class="footer-heading">Links</h3>
                    <!-- <ul class="footer-list"> -->
                    <a href="#" class="footer-link">Home</a><br>
                    <a href="#" class="footer-link">Events</a><br>
                    <a href="#" class="footer-link">Your Events</a><br>
                    <a href="#" class="footer-link">FaQ's</a><br>
                    <!-- </ul> -->
                </div>
                <div class="col-lg-4 col-sm-12">
                    <h3 class="footer-heading">Contact Us</h3>
                    <!-- <ul class="footer-list"> -->
                    <p class="footer-p">eventportal@gmail.com</p>
                    <p class="footer-p">+91-9999999999</p>
                    <p class="footer-p">Contact Us</p>
                    <!-- </ul> -->
                </div>
            </div>
            <p class="copyright">Copyright @2022 <i class="fa-brands fa-square-facebook"></i> <i
                    class="fa-brands fa-instagram "> <i class="fa-brands fa-twitter"></i> </i></p>
            <!-- </div> -->
        </section>

    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
    </script>
    <script>

        $(document).scroll(function () {
            $(".navbar").toggleClass("scroll", $(this).scrollTop() > $(".navbar").height());
        })

        function openForm() {

        }

    </script>
    <script>
        document.querySelector("#show-register").addEventListener("click", function () {
            document.querySelector(".popup").classList.add("active");
        });

        document.querySelector(".popup .close-btn").addEventListener("click", function () {
            document.querySelector(".popup").classList.remove("active");
        });
    </script>
    <script src="javasripts/java.js"></script>
    <script src="https://kit.fontawesome.com/ac602b1922.js" crossorigin="anonymous"></script>
</body>

</html>